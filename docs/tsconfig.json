{
  "extends": "@docusaurus/tsconfig",
  "include": ["."],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["src/components/*"],
      "@/utils": ["src/lib/utils"],
      "@/ui/*": ["src/components/ui/*"],
      "@/lib/*": ["src/lib/*"],
      "@/hooks/*": ["src/hooks/*"]
    }
  },
  "types": ["docusaurus-plugin-sass"]
}
