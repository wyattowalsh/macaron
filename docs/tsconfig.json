{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["docs/src", "docs"],
  "exclude": ["node_modules"],
  "import/resolver": {
    "typescript": {
      "project": ["docs/tsconfig.json"]
    },
    "node": {
      "project": ["docs/tsconfig.json"]
    }
  }
}