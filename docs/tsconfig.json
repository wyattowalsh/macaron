{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["docs/src/*"],
      "@/lib/*": ["docs/src/lib/*"],
      "@/components/*": ["docs/src/components/*"],
      "@/hooks/*": ["docs/src/hooks/*"]
    },
  },
  "include": ["docs/src", "docs"],
  "exclude": ["node_modules"],
  "import/resolver": {
    "typescript": {
      "project": ["docs/tsconfig.json"]
    },
    "node": {
      "project": ["docs/tsconfig.json"]
    }
  }
}